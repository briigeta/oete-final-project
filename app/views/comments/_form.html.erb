
<%= form_with(model: [comment, poem_post.comments.build], url: poem_post_comments_path(poem_post)) do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :poem_post_id, value: poem_post.id %>
  <%= f.text_area :content, class: "tinymce", rows: 10, cols: 3 %>
  <%= tinymce %>
  <%= f.submit "Submit", class: "writingbutton" %>
<% end %>
