
<body class="scroll-container">
  <div class="row">
    <% @poem_posts.each do |poem_post| %>
      <div class="col-md-4">
        <div class="card">
          <div class="card-body">
            <h2 class="card-title"><%= link_to poem_post.title, poem_post_path(poem_post), style: 'color: black; text-decoration: none;' %></h2>
            <div class="card-content">
              <%= raw poem_post.content %>
            </div>
            <p class="card-footer"> 
            Written by:<%= link_to poem_post.user.username, profile_path(poem_post.user), style: 'color: black; text-decoration: none;' %>
            <p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</body>
