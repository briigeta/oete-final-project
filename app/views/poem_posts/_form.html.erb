
<%= form_with model: @poem_post do |form| %>
<% if form.object.errors.any? %>
<div>
<% form.object.errors.full_messages.each do |message| %>
<div><%= message%></div>
<% end %>
</div>
<% end %>

<div>
  <%= form.text_field :title, placeholder: "Title", class: "title-field" %>
</div>

<div class="poem-posts-new-container">
<%= form.text_area :content, :class => "tinymce", :rows => 35, :cols => 70 %>
<%= tinymce %>
<div>

<%= form.button "Submit", class: "writingbutton" %>
<% end %>
